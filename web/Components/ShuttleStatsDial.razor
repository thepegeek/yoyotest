<div class="circle @(Ended? "bg-danger p-3":"")">
    @if (Ended)
    {
        <div class="mt-3 text-white">
            <span>Test Ended. Athletes Results is as below</span>
        </div>
    }
    else if (Started)
    {
        <div id="stats">
            <div class="mt-3">
                @($"Level {SpeedLevel}")
            </div>
            <div>
                @($"Shuttle {ShuttleNumber}")
            </div>
            <div>
                @($"{Speed} km/h")
            </div>
        </div>
    }
    else
    {
        <button id="playButton" class="mt-4 ml-5 oi oi-media-play pt-1" @onclick="StartTimer">
        </button>
    }

    </div>