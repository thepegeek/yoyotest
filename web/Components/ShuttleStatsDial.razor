<div class="circle">
    @if (Started)
    {
        <div id="stats">
            <div class="mt-3">
                @($"Level {SpeedLevel}")
            </div>
            <div>
                @($"Shuttle {ShuttleNumber}")
            </div>
            <div>
                @($"{Speed} km/h")
            </div>
        </div>
    }
    else
    {
        <button id="playButton" class="mt-4 ml-5 oi oi-media-play"
                @onclick="StartTimer">
        </button>
    }

</div>